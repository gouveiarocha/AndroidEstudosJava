<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#270D0D"
        tools:context=".Curso_AndroidOreo2022.Apps.AppJokenpo"
        tools:layout_editor_absoluteY="81dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ESCOLHA SUA OPÇÃO:"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/jokenpo_img_pedra"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/jokenpo_img_papel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/img_jokenpo_pedra"
            android:contentDescription="PEDRA"
            />

        <ImageView
            android:id="@+id/jokenpo_img_papel"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toStartOf="@+id/jokenpo_img_tesoura"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/jokenpo_img_pedra"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/img_jokenpo_papel" />

        <ImageView
            android:id="@+id/jokenpo_img_tesoura"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/jokenpo_img_papel"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:srcCompat="@drawable/img_jokenpo_tesoura" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="VOCÊ:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jokenpo_img_papel" />

        <ImageView
            android:id="@+id/JOKENPO_ESCOLHA_USUARIO"
            android:layout_width="52dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toStartOf="@+id/JOKENPO_ESCOLHA_APP"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@drawable/img_jokenpo_padrao" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="APP:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/jokenpo_img_papel" />

        <ImageView
            android:id="@+id/JOKENPO_ESCOLHA_APP"
            android:layout_width="52dp"
            android:layout_height="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/JOKENPO_ESCOLHA_USUARIO"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/img_jokenpo_padrao" />

        <TextView
            android:id="@+id/JOKENPO_TXTVENCEDOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="VENCEDOR"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jokenpo_img_papel" />

        <ImageView
            android:id="@+id/JOKENPO_IMGVENCEDOR"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/JOKENPO_TXTVENCEDOR"
            app:srcCompat="@drawable/img_jokenpo_padrao" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>