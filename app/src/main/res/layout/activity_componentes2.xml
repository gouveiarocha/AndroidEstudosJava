<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ActsEstudos.Componentes.Componentes2">

    <TextView
        android:id="@+id/txt_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/switch_teste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Switch"
        android:textOff="SWITCH DESLIGADO"
        android:textOn="SWITCH LIGADO"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textSize="18sp" />

    <ToggleButton
        android:id="@+id/tb_teste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="DESLIGADO"
        android:textOn="LIGADO"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testarToast"
        android:text="TESTAR TOAST" />

    <Button
        android:id="@+id/button12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testarAlertDialog"
        android:text="TESTAR ALERTDIALOG" />

    <ProgressBar
        android:id="@+id/pb_horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10" />

    <ProgressBar
        android:id="@+id/pb_circular"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="testarProgressBar"
        android:text="CARREGAR PROGRESSBAR" />

    <TextView
        android:id="@+id/txt_sb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SeekBar"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/sb_teste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="10" />
</LinearLayout>